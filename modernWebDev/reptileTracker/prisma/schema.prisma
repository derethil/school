// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int        @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String     @unique
  passwordHash String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  // Relationships
  reptiles     Reptile[]
  schedules    Schedule[]
}

model Reptile {
  id               Int               @id @default(autoincrement())
  // Foreign keys
  userId           Int
  user             User              @relation(fields: [userId], references: [id])
  // Attributes
  species          String
  name             String
  sex              String
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  // Relationships
  feedings         Feeding[]
  husbandryRecords HusbandryRecord[]
  schedules        Schedule[]
}

model Feeding {
  id        Int      @id @default(autoincrement())
  // Foreign keys
  reptileId Int
  reptile   Reptile  @relation(fields: [reptileId], references: [id])
  // Attributes
  foodItem  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HusbandryRecord {
  id          Int      @id @default(autoincrement())
  // Foreign keys
  reptileId   Int
  reptile     Reptile  @relation(fields: [reptileId], references: [id])
  // Attributes
  length      Float
  weight      Float
  temperature Float
  humidity    Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Schedule {
  id          Int      @id @default(autoincrement())
  // Foreign key
  reptileId   Int
  reptile     Reptile  @relation(fields: [reptileId], references: [id])
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  // Attributes
  type        String
  description String
  monday      Boolean
  tuesday     Boolean
  wednesday   Boolean
  thursday    Boolean
  friday      Boolean
  saturday    Boolean
  sunday      Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
