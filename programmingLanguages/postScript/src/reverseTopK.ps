/min {
    /num1 exch def
    /num2 exch def

    num1 num2 gt
        {num2} % num1 > num2, return num2
        {num1} % num1 < num2, return num1 and num1 == num2, so return num1
    ifelse
} def


/reverseTopK {
    1 dict begin
    count 0 ne {
        /K exch def
        count K min % repeat K times up to number of items on stack
        {
            K 1 roll % move top number to its reversed position K
            /K K 1 sub def % subtract one from K for next iteration
        } repeat
    }
    if
    end
} def
